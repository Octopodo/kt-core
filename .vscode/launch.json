{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Esbuild",
            "program": "${workspaceFolder}/build-es3.js",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "type": "node"
        },
        {
            "type": "extendscript-debug",
            "request": "launch",
            "name": "IO Testing",
            "script": "${workspaceFolder}/test/index.test.jsx",
            "hostAppSpecifier": "aftereffects",
            "hiddenTypes": ["prototype"]
        },

        {
            "type": "extendscript-debug",
            "request": "launch",
            "name": "PatternsTesting",
            "script": "${workspaceFolder}/test/patterns.mixin.test.jsx",
            "hostAppSpecifier": "aftereffects",
            "hiddenTypes": ["prototype"]
        },
        {
            "type": "extendscript-debug",
            "request": "launch",
            "name": "Build & Run Tests",
            "script": "${workspaceFolder}/dist.test/index.test.js",
            "hiddenTypes": ["prototype"],
            "preLaunchTask": "Build Tests",
            "hostAppSpecifier": "aftereffects"
        },
        {
            "type": "extendscript-debug",
            "request": "launch",
            "name": "Debug Build & Run Tests",
            "script": "${workspaceFolder}/dist.test/index.test.js",
            "hiddenTypes": ["prototype"],
            "preLaunchTask": "Debug Build Tests",
            "hostAppSpecifier": "aftereffects"
        },
        {
            "type": "extendscript-debug",
            "request": "launch",
            "name": "Run Tests",
            "script": "${workspaceFolder}/dist.test/index.test.js",
            "hiddenTypes": ["prototype"],
            "hostAppSpecifier": "aftereffects"
        }
    ]
}
